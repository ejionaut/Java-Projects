<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="852.0" prefWidth="393.0" styleClass="mainBackgroundColor" stylesheets="/data/css/style.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.MainLandingPageController">
   <children>
      <HBox alignment="TOP_CENTER" prefHeight="73.0" prefWidth="393.0">
         <children>
            <ImageView fitHeight="100.0" fitWidth="125.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="/data/img/logo.png" />
               </image>
               <HBox.margin>
                  <Insets right="150.0" />
               </HBox.margin>
            </ImageView>
            <Button fx:id="logoutBtn" onAction="#logout" mnemonicParsing="false" prefHeight="27.0" prefWidth="84.0" style="-fx-background-color: #472C51;" text="Logout" textFill="WHITE">
               <HBox.margin>
                  <Insets top="36.0" />
               </HBox.margin></Button>
         </children>
      </HBox>
      <TextArea fx:id="calendarArea" prefHeight="219.0" prefWidth="353.0">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin></TextArea>
      <VBox fx:id="textStorage" prefHeight="329.0" prefWidth="353.0" >
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin></VBox>
      <Button fx:id="createTask" mnemonicParsing="false" onAction="#createTask" prefHeight="42.0" prefWidth="206.0" style="-fx-background-color: #472C51;" text="Create New Task" textFill="WHITE">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin></Button>
      <Button fx:id="viewTask" mnemonicParsing="false" onAction="#viewTask" prefHeight="38.0" prefWidth="206.0" style="-fx-background-color: #472C51;" text="View All Tasks" textFill="WHITE">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin></Button>
   </children>
</VBox>
