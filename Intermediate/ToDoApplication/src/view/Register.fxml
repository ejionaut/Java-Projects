<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mainStage" prefHeight="852.0" prefWidth="393.0" style="-fx-alignment: TOP_CENTER;" styleClass="mainBackgroundColor" stylesheets="/data/css/style.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.RegisterController">
   <children>
      <ImageView fitHeight="337.0" fitWidth="390.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="/data/img/logo.png" />
         </image></ImageView>
      <Label text="Account Creation" textFill="WHITE">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label fx:id="errorPrompt" prefHeight="32.0" prefWidth="393.0" visible="false" />
      <TextArea fx:id="userTextField" prefHeight="32.0" prefWidth="393.0" promptText="Username">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin></TextArea>
      <TextArea fx:id="passwordTextField" prefHeight="32.0" prefWidth="393.0" promptText="Password">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin></TextArea>
      <TextArea fx:id="cpasswordTextField" prefHeight="32.0" prefWidth="393.0" promptText="Confirm Password">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin></TextArea>
      <Button fx:id="createBtn" mnemonicParsing="false" onAction="#createAccount" prefHeight="40.0" prefWidth="222.0" style="-fx-background-color: #472C51;" text="Create Account" textFill="WHITE">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin></Button>
      <Button fx:id="returnBtn" mnemonicParsing="false" onAction="#returnLogin" prefHeight="39.0" prefWidth="224.0" style="-fx-background-color: #472C51;" text="Cancel" textFill="WHITE">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin></Button>
   </children>
</VBox>
