<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="control.CreateTaskController" prefHeight="852.0" prefWidth="393.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox prefHeight="73.0" prefWidth="393.0">
         <children>
            <Button fx:id="logoutBtn" onAction="#logout" mnemonicParsing="false" text="Logout" />
         </children>
      </HBox>
      <TextArea fx:id="errorPrompt" editable="false" prefHeight="32.0" prefWidth="393.0" />
      <TextArea fx:id="titleTextField" prefHeight="32.0" prefWidth="393.0" text="Title" />
      <DatePicker fx:id="datePickField" prefHeight="25.0" prefWidth="363.0" />
      <MenuButton fx:id="importancePickField" mnemonicParsing="false" prefHeight="25.0" prefWidth="363.0" text="MenuButton">
        <items>
          <MenuItem mnemonicParsing="false" text="Important" />
          <MenuItem mnemonicParsing="false" text="Average" />
          <MenuItem mnemonicParsing="false" text="Low" />
          <MenuItem mnemonicParsing="false" text="Default" />
        </items>
      </MenuButton>
      <TextArea fx:id="descriptionBox" prefHeight="200.0" prefWidth="200.0" />
      <Button fx:id="createTaskBtn" onAction="#createAcc" mnemonicParsing="false" text="Create New Task" />
      <Button fx:id="cancelBtn" onAction="#cancel" mnemonicParsing="false" text="Cancel" />
   </children>
</VBox>
